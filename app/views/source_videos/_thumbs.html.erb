<%
classes = ['video-thumbnail']
classes << 'disabled' if disabled
%>
<div class="video-thumbnail-slider">
  <% unless source_video.thumbnails.any? %>

    <div style="width:100%; height: 150px; background-color:grey"></div>

  <% else %>

    <% source_video.thumbnails.each_with_index do |thumbnail, index| %>

      <%= content_tag :div, class: classes, data: { index: index }, style: "width: 100%" do %>
        <%= image_tag thumbnail.image(:medium), width: '100%' %>
      <% end %>

    <% end %>

  <% end %>
</div>
