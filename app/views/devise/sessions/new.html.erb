
<div class="row">
  <div class="col-lg-6 center-block" style="float:none">
    <h2><%= t('.sign_in', :default => "Sign in") %></h2>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <div class="form-group">
        <div><%= f.label :email %><br />
        <%= f.email_field :email, class: 'form-control', placeholder: t(:username_prompt) %></div>
      </div>

      <div class="form-group">
        <div><%= f.label :password %><br />
        <%= f.password_field :password, class: 'form-control' %></div>
      </div>

      <div>
      <% if devise_mapping.rememberable? -%>
        <div class="checkbox">
          <%= f.label :remember_me do %>
            <%= f.check_box :remember_me %> <%= t(:remember) %>
          <% end %>
        </div>
      <% end -%>
      </div>

      <div><%= f.submit t('.sign_in', :default => "Sign in"), class: "btn btn-default" %></div>
    <% end %>

  </div>
</div>


